<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_menu_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="chat_datetime">
        <item name="android:background">@drawable/chat_datetime</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13.0sp</item>
    </style>

    <style name="chat_avatar">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:contentDescription">@drawable/default_avatar</item>
    </style>

    <style name="chat_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">3.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="chat_listview">
        <item name="android:background">#efefef</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dip</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:transcriptMode">normal</item>
    </style>

    <style name="chat_btn_send">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:background">@drawable/chat_send_button_selector</item>
        <item name="android:text">@string/send</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="transparent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="theme_1" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translucent_background_new</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
